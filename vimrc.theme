" vim: syntax=vim

if has('termguicolors')
    set termguicolors
endif

if has('gui_running')
    set guifont=FuraCodeNerdFontComplete-Bold:h15
    set guioptions=
endif

set noshowmode
set number
set cursorline 
syntax enable

"let ayucolor="light"  " for light version of theme
"let ayucolor="mirage" " for mirage version of theme
let ayucolor="dark"   " for dark version of theme
colorscheme ayu
